    <script type="text/javascript">
        window.addEventListener('scroll', function() {
            var scroll = document.querySelector('.fa');
            scroll.classList.toggle("active", window.scrollY > 500)
        })

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            })
        }
    </script>
</body>

</html>
